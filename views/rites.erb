<h2>Recent Rites Conducted</h2>

<table id="rites-table">
  <thead>
    <tr>
      <th>Timestamp</th>
      <th>Player A</th>
      <th>Player B</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% rites.each do |rite| %>
      <tr>
        <td>
          <%= rite[:rite].pretty_timestamp %>
        </td>
        <td class="rites-table-single-player-entry">
          <img alt="" src="<%= rite[:player_a_triumvirate].sigil_img_small %>" width="50">
          <%= rite[:player_a_triumvirate].name %>
          <a href="/users/<%= rite[:player_a][:username] %>"><%= rite[:player_a][:username] %></a> 
        </td>
        <td class="rites-table-single-player-entry">
          <img alt="" src="<%= rite[:player_b_triumvirate].sigil_img_small %>" width="50">
          <%= rite[:player_b_triumvirate].name %>
          <a href="/users/<%= rite[:player_b][:username] %>"><%= rite[:player_b][:username] %></a>
        </td>
        <td class="small">
          <a href="/rites/<%= rite[:rite][:id] %>">details&hellip;</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
